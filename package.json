{
	"name": "jil",
	"version": "0.0.5",
	"description": "UI Framework for HTML5 Games",
	"author": "kefniark@gmail.com",
	"repository": "github:kefniark/jil",
	"license": "MIT",
	"keywords": [
		"html5",
		"game",
		"game-development",
		"ui",
		"framework"
	],
	"main": "build/jil.umd.js",
	"module": "build/jil.es.mjs",
	"types": "build/declarations/index.d.ts",
	"scripts": {
		"build": "run-s build:pre && run-p build:dist:* && run-p build:definition && run-s build:clean",
		"build:pre": "rimraf build",
		"build:dist:rollup": "rollup -c rollup.config.js",
		"build:definition": "tsc --p ./tsconfig.json --declaration true --emitDeclarationOnly true --outDir ./build/declarations",
		"build:clean": "rimraf lib && rimraf build/lib && rimraf build/declarations/tests",
		"coverage": "jest --coverage",
		"coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
		"dev": "rollup -c rollup.dev.config.js",
		"prettier": "run-s prettier:**",
		"prettier:src-ts": "prettier --config .prettierrc.yaml --write \"src/**/*.ts\"",
		"prettier:src-tsx": "prettier --config .prettierrc.yaml --write \"src/**/*.tsx\"",
		"prettier:tests": "prettier --config .prettierrc.yaml --write \"tests/**/*.ts\"",
		"test": "run-s test:**",
		"test:unittest": "jest",
		"test:lint": "prettier --config .prettierrc.yaml --check \"src/**/*.ts\"",
		"test:depencencies": "npm-check --production || echo \"Run 'npm run update' to interactively update dependencies for this project\"",
		"update": "npm-check --update"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/jest": "^24.0.21",
		"@types/node": "^12.12.5",
		"@types/redom": "^3.23.1",
		"coopa": "^0.1.5",
		"coveralls": "^3.0.7",
		"fatina": "^3.0.1",
		"jest": "^24.9.0",
		"kaaya": "0.0.8",
		"npm-check": "^5.9.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.18.2",
		"redom": "^3.24.1",
		"rimraf": "^3.0.0",
		"rollup": "^1.26.3",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-filesize": "^6.2.1",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-serve": "^1.0.1",
		"rollup-plugin-terser": "^5.1.2",
		"rollup-plugin-typescript": "^1.0.1",
		"rollup-plugin-typescript-paths": "^1.2.0",
		"ts-jest": "^24.1.0",
		"ts-loader": "^6.2.1",
		"tslib": "^1.10.0",
		"typescript": "^3.6.4"
	}
}
